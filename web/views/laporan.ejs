<!DOCTYPE html>
<html>
<head>
  <title>Laporan Bulanan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-8 bg-gray-100">
  <div class="bg-white shadow p-6 rounded-lg">
    <h1 class="text-2xl font-bold mb-4">Laporan Konsumsi Bulanan</h1>
    <button onclick="window.print()" class="mb-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Cetak / Simpan PDF</button>

    <table class="w-full text-left border">
      <thead class="bg-blue-600 text-white">
        <tr>
          <th class="px-4 py-2">Bulan</th>
          <th class="px-4 py-2">Jumlah Data</th>
          <th class="px-4 py-2">Total Daya (W)</th>
          <th class="px-4 py-2">Total Energi (kWh)</th>
          <th class="px-4 py-2">Total Biaya (Rp)</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(d => { %>
          <tr class="border-b">
            <td class="px-4 py-2"><%= d.bulan %></td>
            <td class="px-4 py-2"><%= d.jumlah_data %></td>
            <td class="px-4 py-2"><%= d.total_daya %></td>
            <td class="px-4 py-2"><%= d.total_kwh %></td>
            <td class="px-4 py-2">Rp <%= d.total_biaya %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
